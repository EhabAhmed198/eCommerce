<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    tools:context=".buyers.MainActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/applogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

   <TextView
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:text="Find, Descover, Choose and Buy anything online."
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/app_logo"
       android:textSize="22sp"
       android:layout_marginStart="15dp"
       android:layout_marginEnd="15dp"
       android:textColor="?attr/colorPrimary"
       android:textStyle="bold|italic"
       android:gravity="center"
       />

      <Button
          android:id="@+id/main_login_bin"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toTopOf="@id/saller_become"
          android:layout_marginBottom="10dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:background="@drawable/buttons"
          android:padding="17dp"
          android:textAllCaps="false"
          android:textSize="18sp"
          android:text="Already  have an Account? Login"
          android:textColor="@android:color/white"

          />

    <Button
        android:id="@+id/main_join_now_bin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_login_bin"

        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs_design"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Join Now"
        android:textColor="@android:color/white"

        />

    <TextView
        android:id="@+id/saller_become"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wants to become a Saller?"
        android:textSize="20sp"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
          android:layout_marginStart="15dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />
</androidx.constraintlayout.widget.ConstraintLayout>