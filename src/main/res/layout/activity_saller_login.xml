<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sallers.SallerLoginActivity">


    <ImageView
        android:id="@+id/img_saller"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/sellerlogin"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/title_saller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saller Login Form"
        android:gravity="center"
        android:layout_margin="23dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@android:color/holo_blue_light"
        />

    <EditText
        android:id="@+id/saller_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/saller_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:hint="Password..."
        android:inputType="text"
        android:textSize="16sp"
        />


    <Button
        android:id="@+id/saller_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="10dp"
        />


</LinearLayout>